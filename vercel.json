{
  "version": 2,
  "name": "horus-news",
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Content-Language",
          "value": "ar"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/admin.html"
    },
    {
      "source": "/article",
      "destination": "/article.html"
    },
    {
      "source": "/article/:id",
      "destination": "/article.html?id=:id"
    }
  ],
  "redirects": [
    {
      "source": "/dashboard",
      "destination": "/admin.html",
      "permanent": false
    },
    {
      "source": "/control-panel",
      "destination": "/admin.html",
      "permanent": false
    }
  ]
}
